@model IEnumerable<StudyBasedApplication.BO.Models.MapStatusModel>
@{
    WebGrid grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 5);
    
}
<link href="../../Content/StatusMappingCSS/StatusMap.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/jquery-1.8.3.js" type="text/javascript"></script>
<link href="../../Content/Inputscss/buttons.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/StudyStatusMapScript/RenderListOfMapsScript.js" type="text/javascript"></script>
<br />
<hr />
<br />
@grid.GetHtml(

        tableStyle: "webgrid-table",

        headerStyle: "webgrid-header",

        footerStyle: "webgrid-footer",

        alternatingRowStyle: "webgrid-alternating-row",

        selectedRowStyle: "webgrid-selected-row",

        rowStyle: "webgrid-row-style",

        mode: WebGridPagerModes.All,

        columns:

            grid.Columns(

             grid.Column("LocalStudyStatus", "LocalStudyStatus", format: @<text>
<input type="hidden" id="MapIDid" value="@item.StudyStatusMappingID" />
<span id="spanLocalStudyStatus" class="display-mode">@item.TLocalStudyStatus</span>
<input type="text"  size="8" id="txtLocalStudyStatus" value="@item.TLocalStudyStatus" class="edit-mode"  />
</text>, style: "col1Width"),

                 grid.Column("DataSource", format: @<text> <span class="display-mode">@item.TDataSource
                 </span>
<label id="lblDataSource" class="edit-mode">@item.TDataSource</label>
</text>, style: "col1Width"),

                     grid.Column("DataSourceStudyStatus", format: @<text> <span class="display-mode">@item.TDataSourceStudyStatus
                     </span>
<label id="lblDataSourceStudyStatus" class="edit-mode">@item.TDataSourceStudyStatus</label>
</text>, style: "col1Width"),

             grid.Column("Action", format: @<text>
<button type="button" class="edit-user display-mode">
    Edit</button>
<button type="button" class="delete-user display-mode">
    Delete</button>
<button type="button" class="save-user edit-mode">
    Save</button>
<button type="button" class="cancel-user edit-mode">
    Cancel</button>
</text>, style: "col3Width", canSort: false)

           ))
<div id="statusmapform">
</div>
<br />
@using (Html.BeginForm())
{
    @Html.Hidden("groupID", ViewData["groupID"].ToString())
    <input type="button" id="addbtn" value="Add" class="css_button " />
}
