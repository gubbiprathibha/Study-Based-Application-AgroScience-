@model StudyBasedApplication.Models.User
@{
    ViewBag.Title = "EditProfile";
}

<script src="../../Scripts/jquery-1.8.3.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.ui.core.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.ui.widget.js" type="text/javascript"></script>
    
<script type="text/javascript">
    $(function () {

        var form_original_data = $("#profile").serialize();
       
        $("#btnSave").click(function (e) {
            if ($("#profile").serialize() == form_original_data) {
                // no change
                alert("No changes made");
                e.preventDefault();
            }
            else {
                alert("changes done successfully");
            }


        });

    });
</script>

<link href="../../Content/Inputscss/buttons.css" rel="stylesheet" type="text/css" />
<div>
<br />
<fieldset>
<h2>My Profile</h2>
@using (Html.BeginForm("Edit", "EditProfile", FormMethod.Post, new { id = "profile" }))
{
   @Html.HiddenFor(model => model.LoginID)
   @Html.HiddenFor(model => model.GroupID)
   @Html.HiddenFor(model => model.Gender)
   @Html.HiddenFor(model => model.Password)
   @Html.HiddenFor(model=>model.EmailID)
    @Html.HiddenFor(model => model.Password)
     @Html.HiddenFor(model => model.PasswordSalt)
      @Html.HiddenFor(model => model.Phone)
  <h4>  @Html.LabelFor(model => model.FirstName)</h4>
  
  @Html.EditorFor((model => model.FirstName))<br />
   
    <h4>  @Html.LabelFor(model => model.LastName)</h4>
    
    @Html.EditorFor(model => model.LastName)<br />
       
    <h4>   @Html.LabelFor(model => model.Company)   </h4>  
    @Html.EditorFor(model => model.Company)<br />
   <h4>    @Html.LabelFor(model => model.Department) </h4>  
       
    @Html.EditorFor(model => model.Department)<br />
   <h4>    @Html.LabelFor(model => model.Job)    </h4>  
    @Html.EditorFor(model => model.Job)<br />
    <h4>   @Html.LabelFor(model => model.Mobile)   </h4>  
    @Html.EditorFor(model => model.Mobile)<br />
    
    @Html.Hidden("UserID")
    <br />
    <br />
    <input type="submit"  value="Submit" id="btnSave" class=css_button />

  
}</fieldset>
</div>